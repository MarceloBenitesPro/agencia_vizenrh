<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-5">
      <div class="card text-white login-card p-5 mt-5">
        <div class="row justify-content-center mb-5">
          <div class="col-sm-8">
                <div class="titulo">
                  <span style="color:rgb(94, 97, 255); font-weight:bold; text-transform: uppercase; font-size:40px;text-align:center;margin-left:30px">Vizen</span> <p><span style="font-weight:300;text-align:center;margin-left:30px"> Recursos Humanos </span></p>
                </div>
          </div>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-4">
            <%= f.label :email, class: 'form-label' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>

          <div class="mb-4">
            <%= f.label :password, "Senha", class: 'form-label' %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
          </div>

          <div class="mb-4 mt-5 actions text-center">
            <%= f.submit "Entrar", class: 'btn btn-light btn-site-light px-5' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>